@model  Category
@{
    ViewData["Title"] = "Add";

}

<h1>Add New Category</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Create" asp-controller="Department">
            <div class="form-group">
                @*    <label asp-for="@Model.Title" class="col-form-label"></label>*@
                <ejs-textbox id="Title" placeholder="Title" value="@Model.Title" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Icon" class="col-form-label"></label>
                <ejs-textbox id="Icon" placeholder="Icon" value="@Model.Icon" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="@Model.Icon" class="text-danger"></span>
            </div> 
            
            <div class="form-group">
                <label asp-for="@Model.Type" class="col-form-label"></label>
                <ejs-textbox id="Icon" placeholder="Type" value="@Model.Type" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>
            <br />
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



